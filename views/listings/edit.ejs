<% layout('./layouts/boilerplate') %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Listing</h3>
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input class="form-control" name="listing[title]" value="<%= listing.title%>Enter " type="text">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea class="form-control"  name="listing[description]" type="text"><%= listing.description%></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Image</label>
                    <input class="form-control" name="listing[image]" value="<%= listing.image%>" type="text">
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="price" class="form-lable">Price</label>
                            <input class="form-control" name="listing[price]" value="<%= listing.price%>" type="number">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="country" class="form-lable">Country</label>
                            <input class="form-control" name="listing[country]" value="<%= listing.country%>"
                                type="text">
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input class="form-control" name="listing[location]" value="<%= listing.location%>" type="text">
                </div>

                <button class="btn btn-dark edit-btn mb-5">Edit</button>
            </form>
        </div>
    </div>