<% layout('./layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form
      method="post"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          required
          class="form-control"
          name="listing[title]"
          value="<%= listing.title%>Enter "
          type="text"
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          required
          class="form-control"
          name="listing[description]"
          type="text"
        >
<%= listing.description%></textarea
        >
        <div class="invalid-feedback">Please enter short des...</div>
      </div>

      <div class="mb-3">
        Original Listing Image <br/> 
        <img src="<%= originalImageUrl %>" alt="">
      </div>

      <div class="mb-3">
        <label for="image" class="form-lable">Upload new Image</label>
        <input
          class="form-control"
          name="listing[image]"
          type="file"
        />
        <div class="invalid-feedback">Please enter valid Link</div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
            <label for="price" class="form-lable">Price</label>
            <input
              required
              class="form-control"
              name="listing[price]"
              value="<%= listing.price%>"
              type="number"
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="mb-3">
            <label for="country" class="form-lable">Country</label>
            <input
              required
              class="form-control"
              name="listing[country]"
              value="<%= listing.country%>"
              type="text"
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input
          required
          class="form-control"
          name="listing[location]"
          value="<%= listing.location%>"
          type="text"
        />
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <button class="btn btn-dark edit-btn mb-5">Edit</button>
    </form>
  </div>
</div>
